<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".launch.teacher.profile.withdraw.WithdrawActivity">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/teacher_profile_total_balance_title"
            android:textColor="@color/darkGray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/withdraw.Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/teacher_profile_total_balance_count"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <EditText
            android:id="@+id/withdraw.AmountET"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_text_edit"
            android:ems="10"
            android:hint="Enter your withdraw amount"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/darkGray"
            android:textSize="16sp"
            android:inputType="phone"
            android:layout_marginBottom="20dp"/>

        <Spinner
            android:id="@+id/withdraw.BankSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_spinner"
            android:dropDownWidth="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/withdraw.AccountNumberET"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_text_edit"
            android:ems="10"
            android:hint="Enter your bank account number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/darkGray"
            android:textSize="16sp"
            android:inputType="phone"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/withdraw.HolderName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_text_edit"
            android:ems="10"
            android:hint="Enter your bank account holder name"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/darkGray"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/withdraw.PasswordET"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_text_edit"
            android:ems="10"
            android:hint="Enter your password"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/darkGray"
            android:textSize="16sp"
            android:inputType="textPassword"/>

    </LinearLayout>

    <Button
        android:id="@+id/withdraw.SendButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/second_primary_button"
        android:text="Send Request"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>