<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start">

    <ImageView
        android:layout_marginStart="20dp"
        android:id="@+id/receiverImageView"
        android:background="@drawable/circular_image_view"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receiverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/chat_bubble_receiver"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receiverChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="4dp"
                android:text="ini adalah chat saya coba"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/receiverDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19 Sept, 19:30"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"
        android:textSize="11sp"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"/>

</LinearLayout>